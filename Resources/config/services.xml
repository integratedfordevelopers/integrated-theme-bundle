<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="integrated_theme.templating.theme_manager" class="Integrated\Bundle\ThemeBundle\Templating\ThemeManager">
            <argument type="service" id="kernel" />
            <argument type="service" id="templating.name_parser" />
            <argument type="service" id="doctrine_cache.providers.theme_cache" />
            <argument type="service" id="doctrine" />
        </service>

        <service id="integrated_theme.form.type.theme_choice" class="Integrated\Bundle\ThemeBundle\Form\Type\ThemeChoiceType">
            <argument type="service" id="integrated_theme.templating.theme_manager" />
            <tag name="form.type" />
        </service>

        <service id="integrated_theme.form.type.theme_editor" class="Integrated\Bundle\ThemeBundle\Form\Type\ThemeEditorType">
            <tag name="form.type" />
        </service>

        <service id="integrated_theme.twig.theme_extension" class="Integrated\Bundle\ThemeBundle\Twig\Extension\ThemeExtension" public="false">
            <argument type="service" id="integrated_theme.templating.theme_manager" />
            <tag name="twig.extension" />
        </service>

        <service id="integrated_theme.menu.menubuilder" class="Integrated\Bundle\ThemeBundle\Menu\MenuBuilder">
        </service>

        <service id="integrated_theme.templating.helper.theme_manager_helper" class="Integrated\Bundle\ThemeBundle\Templating\Helper\ThemeManagerHelper">
            <argument type="service" id="integrated_theme.templating.theme_manager" />
        </service>

        <service id="integrated_theme.templating.finder.theme_path_finder" class="Integrated\Bundle\ThemeBundle\Templating\Finder\ThemePathFinder">
            <argument type="service" id="integrated_theme.templating.theme_manager" />
            <argument>%kernel.root_dir%</argument>
            <argument type="service" id="doctrine.orm.entity_manager" />
        </service>

    </services>
</container>
